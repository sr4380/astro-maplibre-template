{
  "version": 8,
  "name": "custom-toner",
  "metadata": { "maputnik:renderer": "mlgljs" },

  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://api.maptiler.com/tiles/v3-openmaptiles/tiles.json?key=eBwz9oSyXSmQRvIElGcB"
    }
  },

  "sprite": "https://api.maptiler.com/maps/toner/sprite",
  "glyphs": "https://api.maptiler.com/fonts/{fontstack}/{range}.pbf?key=eBwz9oSyXSmQRvIElGcB",

  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#ffffff" }
    },

    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": { "fill-color": "#000000" }
    },

      {
      "id": "landcover_grass_light",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-antialias": true,
        "fill-color": {
          "stops": [
            [10, "rgba(240,240,240,0.3)"],
            [16, "rgba(240,240,240,1)"]
          ]
        },
        "fill-opacity": 0.5,
        "fill-outline-color": "rgba(0,0,0,0)"
      },
      "layout": {"visibility": "visible"}
    },

    {
  "id": "road_secondary",
  "type": "line",
  "source": "openmaptiles",
  "source-layer": "transportation",
  "filter": [
    "all",
    ["==", "$type", "LineString"],
    ["!in", "class", "pier", "rail", "path", "primary"],
    ["in", "class", "secondary", "tertiary", "minor", "service"]
  ],
  "layout": {
    "line-cap": "round",
    "line-join": "round",
    "visibility": "visible"
      },
  "minzoom": 10,
  "paint": {
    "line-color": {
      "stops": [
        [10, "rgba(0, 0, 0, 0.3)"],
        [12, "rgba(0, 0, 0, 0.5)"],
        [15, "rgba(0, 0, 0, 1)"]
      ]
    },
    "line-width": {
      "stops": [
        [13, 0.05],
        [15, 0.05],
        [17, 0]
      ],
      "base": 1
    }
      }
    },

    {
      "id": "boundaries",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "paint": {
        "line-color": "#333333",
        "line-width": 0.5
      }
    },
    {
      "id": "buildings",
      "type": "line",
      "source": "openmaptiles", 
      "source-layer": "building",
      "paint": {
        "line-color": "#555555",
        "line-width": 1
      }  
    }
  ]
}